{
    "name": "motong/motong-server",
    "description": "motong admin server project",
    "type": "project",
    "license": "MIT",
    "authors": [
        {
            "name": "zyvincent",
            "email": "1003081775@qq.com"
        }
    ],
    "require": {
        "php": ">=7.4",
        "ext-json": "*",
        "ext-openssl": "*",
        "ext-pdo": "*",
        "ext-pdo_mysql": "*",
        "ext-redis": "*",
        "ext-swoole": ">=4.6.3",
        "96qbhy/hyperf-auth": "^2.2",
        "donjan-deng/hyperf-casbin": "^3.21",
        "hyperf/async-queue": "~2.2.0",
        "hyperf/cache": "~2.2.0",
        "hyperf/command": "~2.2.0",
        "hyperf/config": "~2.2.0",
        "hyperf/constants": "~2.2.0",
        "hyperf/crontab": "~2.2.0",
        "hyperf/db-connection": "~2.2.0",
        "hyperf/elasticsearch": "~2.2.0",
        "hyperf/flysystem-oss": "^1.2",
        "hyperf/framework": "~2.2.0",
        "hyperf/guzzle": "~2.2.0",
        "hyperf/http-server": "~2.2.0",
        "hyperf/logger": "~2.2.0",
        "hyperf/memory": "~2.2.0",
        "hyperf/metric": "~2.2.0",
        "hyperf/model-cache": "~2.2.0",
        "hyperf/process": "~2.2.0",
        "hyperf/redis": "~2.2.0",
        "hyperf/session": "~2.2.0",
        "hyperf/signal": "^2.2",
        "hyperf/tracer": "~2.2.0",
        "hyperf/validation": "~2.2.0",
        "overtrue/wechat": "~5.0",
        "qbhy/hyperf-testing": "^1.0",
        "wechatpay/wechatpay": "^1.4",
        "zoujingli/ip2region": "^2.0",
        "zyprosoft/hyperf-common": "^1.0"
    },
    "require-dev": {
        "hyperf/ide-helper": "~2.2.0",
        "swoole/ide-helper": "^4.5",
        "friendsofphp/php-cs-fixer": "^2.14",
        "mockery/mockery": "^1.0",
        "phpstan/phpstan": "^1.8",
        "hyperf/devtool": "~2.2.0",
        "hyperf/testing": "~2.2.0"
    },
    "suggest": {
        "ext-openssl": "Required to use HTTPS.",
        "ext-json": "Required to use JSON.",
        "ext-pdo": "Required to use MySQL Client.",
        "ext-pdo_mysql": "Required to use MySQL Client.",
        "ext-redis": "Required to use Redis Client."
    },
    "autoload": {
        "psr-4": {
            "App\\": "app/"
        },
        "files": []
    },
    "autoload-dev": {
        "psr-4": {
            "HyperfTest\\": "./test/"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "extra": [],
    "scripts": {
        "post-root-package-install": [
            "@php -r \"file_exists('.env') || copy('.env.example', '.env');\""
        ],
        "post-autoload-dump": [
            "rm -rf runtime/container"
        ],
        "test": "co-phpunit --prepend test/bootstrap.php -c phpunit.xml --colors=always",
        "cs-fix": "php-cs-fixer fix $1",
        "analyse": "phpstan analyse --memory-limit 300M -l 0 -c phpstan.neon ./app ./config",
        "start": "php ./bin/hyperf.php start"
    },
    "config": {
        "optimize-autoloader": true,
        "sort-packages": true,
        "allow-plugins": {
            "easywechat-composer/easywechat-composer": true
        }
    }
}
